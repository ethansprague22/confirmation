@incollection{onimusDeformationMechanismsZirconium2021,
	title = {Deformation {Mechanisms} of {Zirconium} {Alloys} after {Irradiation} {Studied} by {Dislocation} {Dynamics} {Simulations} and {In} {Situ} {Straining} {Experiments} in {TEM}},
